<Window x:Class="Diary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Diary"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" ResizeMode="NoResize" SizeToContent="WidthAndHeight">
    <DockPanel>
        <Menu DockPanel.Dock="Top" Style="{StaticResource TopMenuStyle}">
            <MenuItem Header="_Records"></MenuItem>
            <MenuItem Header="_Diary Management"></MenuItem>
        </Menu>
        <Frame Name="MainFrame" Source="Home.xaml" Style="{StaticResource MinimalFrameStyle}"/>
    </DockPanel>
</Window>
